{
  "name": "webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:deploy": "npx wrangler pages deploy .vercel/output/static",
    "d1:create": "npx wrangler d1 create ec-kanri2-db",
    "d1:migrate": "npx wrangler d1 execute ec-kanri2-db --local --file=./prisma/migrations/0001_init.sql",
    "d1:migrate:prod": "npx wrangler d1 execute ec-kanri2-db --remote --file=./prisma/migrations/0001_init.sql"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "dotenv": "^17.2.3",
    "next": "^15.1.0",
    "prisma": "^7.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.55.0"
  }
}
